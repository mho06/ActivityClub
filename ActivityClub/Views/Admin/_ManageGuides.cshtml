@model IEnumerable<ActivityClub.Models.Guide>

<h2 class="mt-4">Manage Guides</h2>

<a href="@Url.Action("AddGuide", "Admin")" class="btn btn-primary mb-3">Add Guide</a>

<table class="management-table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var guide in Model)
        {
            <tr>
                <td>@guide.FullName</td>
                <td>@guide.Email</td>
                <td>
                    
                    <a href="@Url.Action("EditGuide", "Admin", new { id = guide.GuideID })" class="btn btn-secondary btn-sm">Edit</a>
                    <form asp-action="DeleteGuide" asp-controller="Admin" method="post" onsubmit="return confirm('Are you sure you want to delete this guide?');" style="display:inline;">
                        <input type="hidden" name="id" value="@guide.GuideID" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
