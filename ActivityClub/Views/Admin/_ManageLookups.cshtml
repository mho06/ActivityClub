@model IEnumerable<ActivityClub.Models.Lookup>

<h2 class="mt-4">Manage Lookups</h2>
<table class="management-table">
    <thead>
        <tr>
            <th>Lookup Name</th>
            <th>Code</th>
            <th>Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lookup in Model)
        {
            <tr>
                <td>@lookup.LookupName</td>
                <td>@lookup.Code</td>
                <td>@lookup.Order</td>
                <td>
                    <a href="@Url.Action("EditLookup", "Admin", new { id = lookup.LookupID })" class="btn btn-secondary btn-sm">Edit</a>
                    <a href="@Url.Action("DeleteLookup", "Admin", new { id = lookup.LookupID })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
