@model IEnumerable<ActivityClub.Models.Event>

<h2 class="mt-4">Manage Events</h2>
<table class="management-table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Destination</th>
            <th>Date From</th>
            <th>Date To</th>
            <th>Cost</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.EventName</td>
                <td>@eventItem.EventDes</td>
                <td>@eventItem.CategoryLookup</td>
                <td>@eventItem.Destination</td>
                <td>@eventItem.DateFrom.ToString("yyyy-MM-dd")</td>
                <td>@eventItem.DateTo.ToString("yyyy-MM-dd")</td>
                <td>@eventItem.Cost</td>
                <td>@eventItem.Stat</td>
                <td>
                    <a href="@Url.Action("EditEvent", "Admin", new { id = eventItem.EventID })" class="btn btn-secondary btn-sm">Edit</a>
                    <form asp-action="DeleteEvent" asp-controller="Admin" asp-route-id="@eventItem.EventID" method="post" onsubmit="return confirm('Are you sure you want to delete this event?');" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
