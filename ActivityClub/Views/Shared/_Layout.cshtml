<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(ViewData["Title"] ?? "Default Title") - Activity Club Portal</title>
    <link rel="stylesheet" href="~/css/Homepage.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-pzjw8f+ua7Kw1TIqV3zeBfvh4KCioPbB1WUN4zRxTm4BcrH+cOGx4M5F5ZNHb6FZ" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="/images/favicon.png">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    @if (!(ViewData["Title"]?.ToString().Equals("Login") ?? false) && !(ViewData["Title"]?.ToString().Equals("Sign Up") ?? false))
    {
        <header>
            <nav>
                <a href="/Home/Index" class="logo-link">
                    <img src="/images/favicon.png" class="logo-image" />
                    <div class="logo">Beirut Activity Club</div>
                    
                </a>
                <ul>
                    <li><a href="/Home/Index#home">Home</a></li>
                    <li><a href="/Home/Index#about">About Us</a></li>
                    <li><a href="/Event/EIndex">Events</a></li>
                    <li><a href="/Home/Index#contact">Contact Us</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        

                        @if (User.IsInRole("Admin"))
                        {
                            <li><a href="/Admin/ManageAll">Admin Page</a></li>
                        }

                        <li><a href="/Profile/Index"><img src="/images/profile(1).png" id="profile-img" alt="Profile" /></a></li>
                        
                    }
                    else
                    {
                        <li><a href="/Account/Login">Login</a></li>
                        <li><a href="/Account/Signup">Sign Up</a></li>
                    }
                </ul>
            </nav>
        </header>
    }
    @RenderBody()
    <footer>
        <div class="footer-content">
            <div class="contact-info">
                <p>Lebanon, Beirut</p>
                <p>+961 12345678</p>
                <p>info@bac.com.lb</p>
            </div>
            <div class="social-media">
                <ul class="example-2">
